<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ecommerce piscine!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% block stylesheets %}
        {% endblock %}
        
    </head>
    <body>
<header>
    <nav>

		<ul>
			<li><a href="{{path('admin-create-product')}}">Créer un produit</a></li>
			<li><a href="{{path('admin-list-products')}}">Voir les produits</a></li>
			<li><a href="{{path('admin-create-user')}}">Créer un admin</a></li>
			<li><a href="{{path('admin-list-admins')}}">Voir les admins</a></li>
		</ul>

        
                <p>Connecté en tant que {{ app.user.email }}</p>

                <a href="{{ path('logout')}}">Se déconnecter</a>
            
</nav>
      
        </header>
        {% for message in app.flashes('error') %}

	<div style="background-color: yellow;">
		<p>{{ message }} </p>
	</div>

{% endfor %}

{% for message in app.flashes('success') %}

	<div style="background-color: blue;">
		<p>{{ message }} </p>
	</div>

{% endfor %}


        {% block main %}{% endblock %}
    </body>
</html>
