{% extends 'admin/base.html.twig' %}

{% block metatitle %}

<h1>Mis à jour d'un produit</h1>
{% endblock metatitle %}

{% block main %}
<form method="POST">
<label for="title">Titre
<input type="text" name="title" value="{{product.title}}">
</label>

<label for="description">Description
<input type="text" name="description" value"{{product.description}}">
</label>

<label for="Price">Prix
<input type="number" name="price" value="{{product.price}}">
</label>

<label for="is-published">Publié ?
<input type="checkbox" name="is-published" value="{{product.isPublished}}">
</label>

<select name="category-id">

{% for category in categories %}
{% if category.id == product.category.id %} 
					<option selected="selected" value="{{ category.id }}">{{ category.title }}</option>
				{% else %}
					<option value="{{ category.id }}">{{ category.title }}</option>
				{% endif %}
			{% endfor %}


</select>

<button type="submit">Mette à jour le produit</button>

</form>
{% endblock main %}